extends layout

block content

  h1 Category: #{category.name}

  div(style='margin-left:20px;margin-top:20px')

    h2(style='font-size: 1.5rem;') Consoles
    if category_consoles.length
      dl
        each console in category_consoles
          dt
            a(href=console.url) #{console.name}
          dd #{console.summary}
    else
      p This Category has no consoles.
