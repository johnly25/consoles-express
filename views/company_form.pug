extends layout

block content
    h1=title
    if company 
    form(method='POST')
        div.form-group
            label(for='name') Name:
            input#company.form-control(type='text' placeholder='name (Microsoft)' name='name' required value=(undefined===company ? '' : company.name) )
        div.form-group
            label(for='date_founded') Date Founded:
            input#date_founded.form-control(type='date' name='date_founded' value=(undefined===company ? '' : company.date_founded_form_formatted ) )
        div.form-group
            label(for='headquarters') Headquarters:
            input#headquarters.form-control(type='textbox' placeholder='Sunnyvale, California | New York City, New York | Nihonbashi, Chūō, Tokyo ' name='headquarters' value=(undefined===company ? '' : company.headquarters_formatted ) )
        button.btn.btn-primary(type='submit') Submit

    if errors
        ul
            for error in errors
                li!= error.msg
